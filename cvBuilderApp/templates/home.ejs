{% extends 'main.ejs' %}
{% load static %}
{% block content %}

    {% if user.is_authenticated %}    
    <div class="container">

        <div class="col-md-12 text-center mb-5">
            <a href="{% url 'Detail' slug=user.username %}" target="blank" class="btn btn-outline-info">View Your CV</a>
        </div>

        <div class="card-deck"> 
            
            <div class="card" style="width: 300px; height: 400px;">
              <img src="{% static 'imgTemplates/cv1.PNG' %}" class="card-img-top" alt="..." style="width: 100%; height: 80%;">
              <div class="card-body col-md-12 text-center">
                <button onclick="document.getElementById('id_template').value = 'cv1.html'; document.getElementById('updateTemplateForm').submit();" class="btn btn-outline-info" style="width: 80%;">Use This Template</button>
              </div>
            </div>

            <div class="card" style="width: 300px; height: 400px;">
                <img src="{% static 'imgTemplates/cv2.PNG' %}" class="card-img-top" alt="..." style="width: 100%; height: 80%;">
                <div class="card-body col-md-12 text-center">
                  <button onclick="document.getElementById('id_template').value = 'cv2.html'; document.getElementById('updateTemplateForm').submit();" class="btn btn-outline-info" style="width: 80%;">Use This Template</button>
                </div>
            </div>
            
        </div>
    </div>        
    {% endif %}

    {% if user.is_authenticated %}
    <div class="cotainer" style="display: none;">
        <div class="mt-3 shadow-lg p-3 mb-5 bg-white rounded">
            <form method="POST" id="updateTemplateForm">
                {% csrf_token %}
                <fieldset class="form-group">
                    <legend class="border-bottom mb-4">Template Info</legend>
                    {{ temp }}
                </fieldset>
                <div class="form-group col-md-12 text-center">
                    <button class="btn btn-outline-info" type="submit">Update</button>
                </div>
            </form>
        </div>
    </div>
    {% endif %}

{% endblock content %}